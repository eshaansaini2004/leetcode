class Solution:
    def climbStairs(self, n: int) -> int:
        '''
        so basically we memoize the solution 
        we start 0 you and then from the 0th step we can either take 1 or 2 steps 
        but at step n there is only 1 way to get to n so return 1 , if we at i > n return 0 
        else we recursively compute and store and return dp[i]
        '''

        dp = [-1]*n
        def dfs(i):
            if i > n :
                return 0 
            if i == n:
                return 1
            if dp[i]!= -1:
                return dp[i]
            dp[i] =  (dfs(i+1)+dfs(i+2))
            return dp[i]
        return dfs(0)
        
        