class Solution:
    def numIslands(self, grid: List[List[str]]) -> int:
        '''
        pretty basic 
        you do dfs here
        once you see a 1 in grid mkae it a 0 and then call dfs in the four directions
        have a for loop that iterates over the entire grid and every time we encounter a 1 we then call dfs on it 
        '''
        def dfs(i,j):
            if i < 0 or i >= len(grid):
                return 
            if j < 0 or j >= len(grid[0]):
                return
            if grid[i][j] == "0":
                return
            grid[i][j] = "0"
            dfs(i+1,j)
            dfs(i-1,j)
            dfs(i,j+1)
            dfs(i,j-1)

        count = 0
        for i in range(len(grid)):
            for j in range(len(grid[i])):
                if grid[i][j] == "1":
                    dfs(i,j)
                    
                    count+=1
        #print(grid)
        return count